<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= link_to post.destination.name, destination_path(post.destination_id) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table><br><br>

<%= link_to "New Post", new_post_path%>