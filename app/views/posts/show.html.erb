<p id="notice"><%= notice %></p>
<h1><%=@post.title%></h1>
<h2><%= link_to @blogger.name, blogger_path(@blogger)%></h2>
<h3><%= link_to @destination.name, destination_path(@destination)%></h3>

<p><%=@post.content%></p>


<h4>Number of Likes: <%=@post.likes%></h4>
<%= button_to "like", like_path(@post)%>
<h1>LIKE MY POST!!!</h1>
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>