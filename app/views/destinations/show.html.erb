<h1><%=@destination.name%></h1>
<h2>Country: <%= @destination.country%></h5>

<p>Blogger Average Age:<%=@average_age%></p>
<p> Featured Blog Post: <%=link_to @featured_post.title, post_path(@featured_post)%></p>

<h4>Recent Posts</h4>

<table>
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Blogger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recent_posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= link_to post.blogger.name, blogger_path(post.blogger) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
